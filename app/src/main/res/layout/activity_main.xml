<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingLeft="10dp"
    android:paddingRight="20dp"
    android:scrollbars="none"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Home"
       android:id="@+id/home"
       android:textSize="22dp"
       android:textStyle="bold"
       android:layout_marginTop="23dp"
       android:textColor="@color/blue"
       ></TextView>
   <ImageView
       android:layout_width="70dp"
       android:layout_height="50dp"
       android:src="@drawable/ic_baseline_notifications_none_24"
      android:layout_marginTop="18dp"
      android:layout_alignParentRight="true"
      ></ImageView>

   <TextView
       android:id="@+id/jenifer"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:text="Hi Jenifer!"
      android:layout_below="@+id/home"
      android:layout_marginTop="25dp"
      android:textSize="35dp"
       android:textColor="@color/blue"
       ></TextView>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:text="Good Morning"
      android:layout_below="@id/jenifer"
      android:layout_marginTop="8dp"
      android:textSize="15dp"
      android:letterSpacing="0.1"
       android:id="@+id/goodmor"
       ></TextView>

   <SearchView
       android:id="@+id/search"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/goodmor"
       android:layout_marginTop="25dp"
       android:background="@drawable/myback" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:layout_below="@id/search"
      android:orientation="horizontal"
       android:layout_marginTop="25dp"
       android:background="@drawable/back"
       android:paddingLeft="13dp"
       android:id="@+id/lin1"
       >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:orientation="vertical">
      <TextView
          android:layout_marginTop="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text="Welcome!"
         android:textSize="18dp"
         android:textStyle="bold"
         android:textColor="@color/blue"
          ></TextView>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Let's schedule your\nProjects"
             android:textSize="15dp"
             android:textColor="@color/blue"
             android:layout_marginTop="10dp"
             ></TextView>
      </LinearLayout>

<ImageView
    android:layout_width="120dp"
    android:layout_height="150dp"
    android:src="@drawable/sync_amico"
    android:layout_marginLeft="58dp"
    ></ImageView>

   </LinearLayout>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:text="Ongoing Projects"
      android:layout_below="@+id/lin1"
      android:textSize="22dp"
      android:textStyle="italic"
      android:textColor="@color/blue"
      android:layout_marginTop="10dp"
   ></TextView>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/viewall"
       android:text="view all"
       android:layout_below="@+id/lin1"
       android:textSize="15dp"
       android:textColor="@color/blue"
       android:layout_marginTop="10dp"
       android:layout_alignParentRight="true"
       android:layout_marginRight="17dp"
       ></TextView>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:layout_below="@+id/viewall"
       android:id="@+id/car1"
      android:orientation="horizontal"
       android:layout_marginTop="20dp"
       android:paddingLeft="20dp"
       android:gravity="center"
       >
      <LinearLayout
          android:layout_width="140dp"
          android:layout_height="160dp"
        android:orientation="vertical"
          android:background="@drawable/back12"
          >

      </LinearLayout>

      <LinearLayout
          android:layout_width="140dp"
          android:layout_height="160dp"
          android:orientation="vertical"
          android:background="@drawable/back12"
          android:layout_marginLeft="20dp"

          >
      </LinearLayout>

   </LinearLayout>


   <LinearLayout
       android:paddingLeft="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/car1"
       android:orientation="horizontal"
       android:layout_marginTop="20dp"
       android:gravity="center"
       >
      <LinearLayout
          android:layout_width="140dp"
          android:layout_height="160dp"
          android:orientation="vertical"
          android:background="@drawable/back12"
          >

      </LinearLayout>

      <LinearLayout
          android:layout_width="140dp"
          android:layout_height="160dp"
          android:orientation="vertical"
          android:background="@drawable/back12"
          android:layout_marginLeft="20dp"
          >
      </LinearLayout>

   </LinearLayout>
</RelativeLayout>





</ScrollView>